@model SchoolManagementSystem.Models.StudentCourse
@{
    ViewData["Title"] = "Delete Enrollment";
}
<h1>Delete Enrollment</h1>
<h3>Are you sure you want to delete this enrollment?</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Student.FirstName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Student.FirstName) @Html.DisplayFor(model => model.Student.LastName)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Course.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Course.Name)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Course.Teacher.FirstName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Course.Teacher.FirstName) @Html.DisplayFor(model => model.Course.Teacher.LastName)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </dt>
            <dd class="col-sm-8">
                @Model.EnrollmentDate.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Grade)
            </dt>
            <dd class="col-sm-8">
                @if (Model.Grade.HasValue)
                {
                    @Model.Grade.Value.ToString("0.00")
                }
                else
                {
                    <span class="text-muted">Not graded</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}